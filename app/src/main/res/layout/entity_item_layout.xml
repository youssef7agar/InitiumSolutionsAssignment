<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/medium">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_entity_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/small"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_entity_item"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_35"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_entity_item"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:text="KFISSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSS"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/card_entity_item"
        app:layout_constraintStart_toStartOf="@id/card_entity_item"
        app:layout_constraintTop_toBottomOf="@id/card_entity_item" />
</androidx.constraintlayout.widget.ConstraintLayout>