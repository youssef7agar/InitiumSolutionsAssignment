<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/medium">

    <ImageView
        android:id="@+id/img_entity_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:mipmap/sym_def_app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_entity_item"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="KFISSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSS"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/img_entity_item"
        app:layout_constraintStart_toStartOf="@id/img_entity_item"
        app:layout_constraintTop_toBottomOf="@id/img_entity_item" />
</androidx.constraintlayout.widget.ConstraintLayout>